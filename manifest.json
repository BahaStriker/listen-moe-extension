{

	"applications": {
		"gecko": {
			"id": "odysseyradio@listen.moe"
		}
	},

	"manifest_version": 2,

	"name": "LISTEN.moe",
	"description": "Anime/Japanese Radio powered by LISTEN.moe!",
	"version": "2017.3.8.1",

	"icons": {
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"permissions": [
		"*://listen.moe/*",
		"storage",
		"webRequest",
		"webRequestBlocking"
	],

	"browser_action": {
		"browser_style": false,
		"default_popup": "popup.html",
		"default_icon": "images/icon48.png"
	},

	"background": {
		"scripts": ["js/jquery-3.1.0.min.js", "js/background.js"],
		"persistent": true
	},

	"content_scripts": [
		{
			"matches": ["https://listen.moe/*"],
			"js": ["js/jquery-3.1.0.min.js", "js/listenmoe.js"],
			"css": ["css/listenmoe.css"],
			"run_at": "document_end",
			"all_frames": false
		}
	]
}
