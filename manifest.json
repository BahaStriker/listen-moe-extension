{

	"applications": {
		"gecko": {
			"id": "odysseyradio@listen.moe"
		}
	},
	
	"manifest_version": 2,

	"name": "Odyssey Radio",
	"description": "Anime/Japanese Radio powered by Odyssey Radio!",
	"version": "2016.8.22.3",

	"icons": {
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
  
	"permissions": [
		"*://listen.moe/*",
		"storage",
		"webRequest",
		"webRequestBlocking"
	],
	
	"browser_action": {
		"browser_style": false,
		"default_popup": "popup.html",
		"default_icon": "images/icon48.png"
	},

	"background": {
		"scripts": ["js/jquery-3.1.0.min.js", "js/background.js"],
		"persistent": true
	}
}